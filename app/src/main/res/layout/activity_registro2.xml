<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f3d32a"
    android:layout_weight="1"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="97dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="85dp"
        android:layout_weight=".35"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/txtFechaInicio"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/bordes_redondos"
        android:ems="14"
        android:hint="Inicio del tratamiento"
        android:inputType="date"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:maxLines="1"
        android:focusable="false"
        android:clickable="true"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textColorLink="#000"
        android:layout_weight=".15"/>

    <EditText
        android:id="@+id/txtCuidador"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="20dp"
        android:layout_weight=".15"
        android:background="@drawable/bordes_redondos"
        android:ems="14"
        android:gravity="center"
        android:hint="¿Quién te cuida en casa?"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textColorLink="#000" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight=".10"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bordes_redondos"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtGen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="¿Asistes a cuidados paliativos en SOLCA?"
            android:textColor="#000"
            android:textSize="18sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#932aa0"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:theme="@style/AppThemeMyLight">

            <RadioButton
                android:id="@+id/radio_mujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Mujeres"
                android:text="Si"
                android:textColor="#000"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radio_hombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Hombres"
                android:text="No"
                android:textColor="#000"
                android:textSize="17sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botonmorado"
        android:text="Registrarme"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_marginVertical="30dp"
        android:layout_weight=".15"
        android:layout_marginHorizontal="100dp"/>




</LinearLayout>