<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".Tutorial3"
    android:background="#f3d32a">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Hola, soy Felipe y seré tu guía en esta travesía."
        android:textColor="#932aa0"
        android:layout_weight=".35"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="179dp"
        android:layout_height="364dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_weight=".50"
        android:src="@drawable/felipenormal" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botonmorado"
        android:text="Continuar"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_marginVertical="30dp"
        android:layout_weight=".15"
        android:layout_marginHorizontal="100dp"/>

</LinearLayout>
